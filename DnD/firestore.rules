rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User Data: Strictly locked to the owner
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Content Collections: Publicly readable by logged-in users, Writable by logged-in users (Dev Mode)
    // In production, 'write' should be restricted to admin UIDs or custom claims.
    match /content_items/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /content_monsters/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /content_spells/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /content_adventures/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /content_campaigns/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
